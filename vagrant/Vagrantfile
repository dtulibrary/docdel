# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant::Config.run do |config|
  config.vm.box = "wheezy"
  config.vm.box_url = "http://vagrant.cvt.dk/vagrant-wheezy.box"

#  config.vm.provider :virtualbox do |vb|
#    vb.customize ["modifyvm", :id, "--name", "haitatsu.vagrant.vm"]
#  end
  config.vm.customize ["modifyvm", :id,
                       "--name", "haitatsu.vagrant.vm",
                      ]

  config.vm.network :hostonly, "192.168.207.18"
  config.vm.host_name = "haitatsu.vagrant.vm"

  config.vm.provision :shell, :inline => "apt-get update"

  config.vm.provision :puppet do |puppet|
    puppet.manifests_path = "manifests"
    puppet.manifest_file = "init.pp"
    puppet.module_path = ['puppet-applications/vagrant-modules', 'puppet-applications/modules']
  end
end
